  <script>
    const input = document.getElementById('search');
    const clearBtn = document.getElementById('clear');
    const table = document.getElementById('callsTable');
    const tbody = table.tBodies[0];
    const rows = Array.from(tbody.rows);

    function escapeRegExp(string) {
      return string.replace(/[.*+?^${}()|[\]\\]/g, '\\$&');
    }

    function highlightCell(cell, terms){
      let text = cell.textContent;
      if(!terms.length) { cell.innerHTML = text; return; }
      // replace matches with <mark>
      let html = text;
      terms.forEach(t => {
        if(!t) return;
        const rx = new RegExp(escapeRegExp(t), 'gi');
        html = html.replace(rx, match => `<mark>${match}</mark>`);
      });
      cell.innerHTML = html;
    }

    function filterTable() {
      const raw = input.value.trim();
      // split on commas but keep exact pieces; empty pieces ignored
      const terms = raw.split(',').map(s => s.trim()).filter(Boolean).map(s => s.toLowerCase());

      rows.forEach(row => {
        // combine searchable text
        const rowText = Array.from(row.cells).map(c => c.textContent.toLowerCase()).join(' | ');
        if(!terms.length) {
          row.classList.remove('hidden');
          // remove previous highlights
          Array.from(row.cells).forEach(c => c.innerHTML = c.textContent);
          return;
        }

        // Match if ANY search term appears in the row (OR logic)
        const matches = terms.some(t => rowText.indexOf(t) !== -1);
        if(matches){
          row.classList.remove('hidden');
          // highlight matches per cell
          Array.from(row.cells).forEach(c => highlightCell(c, terms));
        } else {
          row.classList.add('hidden');
        }
      });
    }

    input.addEventListener('input', filterTable);
    clearBtn.addEventListener('click', ()=>{ input.value=''; input.focus(); filterTable(); });

    // Optional: focus the input on load
    input.focus();
  </script>
